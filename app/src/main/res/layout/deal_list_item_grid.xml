<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/deal_list_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_weight=".70"
        tools:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/deal_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight=".15"
        android:gravity="center"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@drawable/gray_color"
        tools:text="Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/deal_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight=".5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="$12.50" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/shipLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/ship_text_label"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_text_lable"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@drawable/gray_color" />

        </LinearLayout>

        <Button
            android:id="@+id/aisleLabel"
            style="@style/DealsAisleButtonStyle"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="A1" />

    </LinearLayout>
</LinearLayout>